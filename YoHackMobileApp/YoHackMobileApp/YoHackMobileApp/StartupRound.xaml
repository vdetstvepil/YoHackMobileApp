<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="YoHackMobileApp.StartupRound">
    <ContentPage.Content>

    <StackLayout Margin="0,200,0,0">
        <Label Text="Раунд"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontSize="Title"
               FontAttributes="Bold"/>
        <Entry
            Placeholder="Требуемая сумма инвестиций" Margin="30"/>
                    <Picker
            Title="Стадии" Margin="20" x:Name="stage">
            <Picker.ItemsSource>
            <x:Array Type="{x:Type x:String}">
            <x:String>Idea</x:String>
            <x:String>MVP</x:String>
            <x:String>First sales</x:String>
            </x:Array>
            </Picker.ItemsSource>
            </Picker>
        <Editor Placeholder="Условия инвестиций" Margin="30"/>
        <Button
            Text="Создать"
            BackgroundColor="Blue"
            Padding="10"
            Clicked="Back"
            TextColor="White"
            Margin="30"
        />
        <Button
            Text="Отмена"
            TextColor="Red"
            Clicked="Back"
            />
        
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
