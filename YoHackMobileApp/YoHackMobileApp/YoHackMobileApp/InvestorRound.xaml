<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YoHackMobileApp.InvestorRound">
    <ContentPage.Content>
    <StackLayout Margin="0,200,0,0">
        <Label Text="Раунд" HorizontalOptions="Center" VerticalOptions="Start" FontSize="Title" FontAttributes="Bold"/>
        <Entry
            Placeholder="Сумма инвестиций" Margin="30"/>
        <Entry Placeholder="Стадия стартапа" Margin="30"/>
        <Editor Placeholder="Условия инвестиций" Margin="30"/>
        <Button
            Text="Создать"
            BackgroundColor="Blue"
            Padding="10"
            Clicked="Back"
            TextColor="White"
            Margin="30"
        />
        <Button
            Text="Отмена"
            TextColor="Red"
            Clicked="Back"
            />
        
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
